<%- partial ('../partials/statusmessage.ejs') %>
<h2>Add Recipe</h2>
<form class="form-horizontal" id="createRecipeForm">
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input required type="text" id="name" name="name" placeholder="Name" class="form-control">
    </div>
    <label for="description" class="col-sm-2 control-label">Description</label>
    <div class="col-sm-10">
      <input type="text" id="description" name="description" placeholder="Description" class="form-control">
    </div>
    <label for="ingredients" class="col-sm-2 control-label">Ingredients</label>
    <div class="col-sm-10">
      <input id="ingredientsTokenfield" type="text" class="form-control tokenfield" placeholder="Hit tab, enter, or comma after each ingredient" value="">
    </div>
    <label for="recipePicture" class="col-sm-2 control-label">Photo</label>
    <div class="col-sm-10">
      <input type="text" id="recipePicture" name="recipePicture" placeholder="http://via.placeholder.com/200x200" class="form-control">
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Recipe</button>
    </div>
  </div>
</form>
